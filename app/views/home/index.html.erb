<div class="container">
  <h1 align="center">単語帳LOGIN</h1><br>

  <% if current_user.present? %>
    <%= link_to "", cookie_sign_out_path, method: :delete %><%#LOGOUT%>
  <% else %>
    <%= link_to "", cookie_new_path %><%#LOGIN%>
  <% end %>
  <div style="text-align:center">
  <%= form_with(url: "/cookie/sign_in") do |f|%>

      <div class="form-group">
        <%= f.text_field :email, class: "input-width",placeholder: "ID(Mail address)" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, class: "input-width2",placeholder: "Password" %>

      <%= f.submit "LOGIN",class:"btn btn-secondary" %>
      </div>
  <% end %>
  </div>
  <br>
  <div style="text-align:right">
  <%= button_to "新しいUser作成", users_new_path ,id: "button",class:"btn btn-secondary"%>
  </div>
</div>

<style>
.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 80vh; /* 최소 높이를 화면 높이와 같도록 설정하여 세로 중앙 정렬 */
}

#button {
  width: 350px; /* 원하는 너비 설정 */
  height: 38px; /* 원하는 높이 설정 */
  font-size: 18px; /* 원하는 글꼴 크기 설정 */
  /* 기타 스타일 속성을 필요에 따라 추가할 수 있습니다. */
}

.input-width {
  width: 300px; /* 원하는 입력 필드 넓이로 조정 */
}
.input-width2 {
  width: 300px; /* 원하는 입력 필드 넓이로 조정 */
  margin-left: 73px;
}
</style>