<h2>新しいUser作成</h2>

<%= form_with model: @user do |f|%>

    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>

    <%= f.label :password_confirmation %> <%#_confirmation%>
    <%= f.password_field :password_confirmation %> <%#_confirmation%>
    <br>

    <%= f.submit %>
    
<% end %>