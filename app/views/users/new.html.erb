<div class="container">
<h1>User作成</h1>

<%= form_with model: @user do |f|%>

    <div class="form-group">
        <%= f.text_field :name, class: "input-width",placeholder: "名前" %>
    </div>
    
    <div class="form-group">
        <%= f.text_field :email, class: "input-width",placeholder: "ID(Mail address)" %>
    </div>

    <div class="form-group">
        <%= f.password_field :password, class: "input-width",placeholder: "Password" %>
    </div>

    <div class="form-group">
        <%= f.password_field :password_confirmation, class: "input-width",placeholder: "Password" %>
    </div>

    <div style="text-align:right">
    <%= f.submit "新しいUser作成する",class:"btn btn-secondary"%>
    </div>
<% end %>
</div>

<style>

.input-width {
  width: 400px; /* 원하는 입력 필드 넓이로 조정 */
}

.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 90vh; /* 최소 높이를 화면 높이와 같도록 설정하여 세로 중앙 정렬 */
}

@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+JP&display=swap');

 body{
  font-family: 'Noto Sans JP', sans-serif;
  background-color:lightgray;
}
</style>