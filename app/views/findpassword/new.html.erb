.input-width {
  width: 450px; /* 원하는 입력 필드 넓이로 조정 */
}
.date-width{
  width: 147.5px;
}
#btn-width {
  width:222px; /* 버튼 넓이 설정 */
  margin-bottom: 10px; /* 버튼 사이 간격 설정 */
