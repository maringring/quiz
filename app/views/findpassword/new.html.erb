<div class="container">
<h1>会員情報確認</h1><br>

<%= form_with model: @user, url: "/findpassword/user_confirm" do |f|%>

    <div class="form-group">
        <%= f.text_field :email, class: "input-width",placeholder: "ID(Mail address)" %>
    </div>

    <div class="form-group">
        <%= f.date_select :birthday, 
        { order: [:year, :month, :day], prompt: { year: '年', month: '月', day: '日' } }, class:"date-width" %>
    </div>

    <div style="text-align:right; margin-top: 30px;">
      <%= f.submit "確認",class:"btn btn-secondary", id:"btn-width"%>
      <%= link_to "戻る", home_index_path ,class:"btn btn-secondary", id:"btn-width"%>
    </div>
<% end %>
      
</div>
    
     
   

