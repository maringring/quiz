<div class="container">
<h1>暗証番号変更</h1><br>

<%= form_with model: @user, url: "/findpassword/update",id:"passwordChangeForm" do |f|%>

    <div class="form-group">
        <%= f.label :newpassword %>
        <%= f.password_field :newpassword1, class: "input-width",placeholder: "新しいpasswordを入力してください。",oninput:"checkPasswordMatch()",autocomplete:"off" %>
    </div>

    <div class="form-group">
        <%= f.label :newpassword %>
        <%= f.password_field :newpassword2, class:"input-width",placeholder: "新しいpasswordを再入力してください。",oninput:"checkPasswordMatch()",autocomplete:"off" %>
    </div>
    <div id="passwordMatchMessage" style="margin-left:10px;"></div> 

    <div style="text-align:right; margin-top: 30px;">
      <%= f.submit "変更",onclick:"validateAndSubmit(event)",class:"btn btn-secondary"%>
    </div>
<% end %>
      
</div>
    
     
   
<script src="/scripts/mypage.js"></script>
